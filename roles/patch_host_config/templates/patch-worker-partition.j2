#jinja2:trim_blocks: True, lstrip_blocks: True
{
  "ignition": {
    "version": "3.2.0"
  },
  "storage": {
    {% if disks | length > 0 %}
    "disks": [
      {% for disk in disks %}
      {
        "device": "{{ disk.device }}",
        "partitions": [
          {% set partitions = ((disk.extra_partitions | default({})).items() | list) %}
          {% if disk.device == (installation_disk_path | default(host.json.installation_disk_path)) %}
          {{ (disks_rhcos_root | tojson) + (((partitions | length) > 0) | ternary(',','')) }}
          {% endif %}
          {% for label, size in partitions %}
          {
            "label": "{{ label | string }}",
            "sizeMiB": {{ size | int }}
          }{{ ((loop.index == (partitions | length)) | ternary('',',')) }}
          {% endfor %}
        ],
        "wipeTable": false
      }{{ ((loop.index == (disks | length)) | ternary('',',')) }}
      {% endfor %}
    ]{{ (filesystems | length > 0) | ternary('',',')) }}
    {% endif %}
    {% if filesystems | length > 0 %}
    "filesystems": [
      {% for fs in filesystems %}
      {
        "device": "{{ fx.device | default("/dev/disk/by-label/" + fx.label) }}",
        "path": "{{ fx.path | mandatory }}",
        "format": "{{ fx.format | mandatory }}",
        "wipeFilesystem": {{ fx.wipe | default(false) }},
        "label": "{{ fx.label }}"
      }{{ ((loop.index == (filesystems | length)) | ternary('',',')) }}
      {% endfor %}
    ]
    {% endif %}
  }
}
